<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h1>{{msg}}</h1>
                <h2>What Trail Do you Want to Tackle?</h2>
                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label for="example-text">Enter in your own Trail</label>
                        <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
                            placeholder="Enter in your own Trail">
                    </div>
                    <div class="form-group">
                        <label for="example-description">Trail Description</label>
                        <textarea class="form-control" id="example-description" aria-describedby="example-description"
