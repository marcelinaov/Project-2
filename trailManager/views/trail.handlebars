<div class="image">
    <h1 class="trailTitle"></h1>
</div>

<form class="search-form">
    <div class="form-group">
        <label for="minLengthInput">How Much Time You Got</label>
        <input type="number" class="form-control miles-input" id="minLengthInput" name="minLengthInput"
            placeholder="Enter Hours">

    </div>


    <button type="submit" class="btn2 btn-primary">Search</button>
</form>

{{#each trails}}
<p>Name: {{this.name}}</p>
<p>Location: {{this.location}}</p>
<p>Length: {{this.length}}</p>
<p>Distance: {{this.distance}}</p>
<hr>
{{/each}}