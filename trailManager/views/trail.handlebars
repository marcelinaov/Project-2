<div class="image">
    Trail Manager
</div>

<form>
    <div class="form-group">
        <label for="minLengthInput">Minimum Length of Trail</label>
        <input type="number" class="form-control" id="minLengthInput" name="minLengthInput" placeholder="Enter miles">

    </div>


    <button type="submit" class="btn btn-primary">Search</button>
</form>

{{#each trails}}
<p>Name: {{this.name}}</p>
<p>Location: {{this.location}}</p>
<p>Length: {{this.length}}</p>
<p>Distance: {{this.distance}}</p>
<hr>
{{/each}}